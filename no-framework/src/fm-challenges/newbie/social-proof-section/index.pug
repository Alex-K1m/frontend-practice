extends ../../../includes/layout

block variables
  - const title = "Social proof section";

block fonts
  +googleFonts([ 'family=Spartan&display=swap', 'family=Spartan:wght@500&display=swap', 'family=Spartan:wght@700&display=swap', ])

block content
  -
    const reviewers = ['Reviews', 'Report Guru', 'BestTech'];
    const testimonials = [
      [
        'Colton Smith',
        'We needed the same printed design as the one we had ordered a week prior. Not only did they find the original order, but we also received it in time. Excellent!'
      ],
      [
        'Irene Roberts',
        'Customer service is always excellent and very quick turn around. Completely delighted with the simplicity of the purchase and the speed of delivery.'
      ],
      [
        'Anne Wallace',
        'Put an order with this company and can only praise them for the very high standard. Will definitely use them again and recommend them to everyone!'
      ],
    ];

  section.social-proof
    .social-proof__intro
      h2.h2 10,000+ of our users love our products.
      p.text.
        We only provide great products combined with excellent customer service.
        See what our satisfied customers are saying about our services.
    .social-proof__ratings
      each reviewer in reviewers
        .rating
          .stars
          p.text-subtitle Rated 5 Stars in #{reviewer}
    .social-proof__testimonials
      each testimonial in testimonials
        - const [author, quote] = testimonial;
        - const str = author.split(" ")[0].toLowerCase();
        .card
          .person
            img.person__avatar.avatar(src=`image-${str}.jpg`, alt=`${author}`)
            p.person__name.text-subtitle #{author}
            p.person__info.text-secondary Verified Buyer
          blockquote.quote #{quote}
