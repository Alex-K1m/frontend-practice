{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "description": "Frontend projects for practicing with various tech",
  "license": "MIT",
  "repository": "git@github.com:Alex-K1m/frontend-practice.git",
  "author": "Alex Kim <45559664+Alex-K1m@users.noreply.github.com>",
  "homepage": "https://alex-k1m.github.io/frontend-practice/",
  "bugs": "https://github.com/Alex-K1m/frontend-practice/issues",
  "scripts": {
    "nofr": "yarn workspace @frontend/no-framework",
    "react": "yarn workspace @frontend/react"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "no-framework/**/*.js": "yarn nofr eslint --fix",
    "no-framework/**/*.scss": "yarn nofr stylelint --fix",
    "no-framework/**/*.pug": "yarn nofr prettier --write",
    "react/**/*.{js,jsx}": [
      "yarn react eslint --fix",
      "yarn react jest --findRelatedTests"
    ],
    "react/**/*.{json,yml,yaml,md}": "prettier --write"
  },
  "workspaces": [
    "no-framework",
    "react"
  ]
}
