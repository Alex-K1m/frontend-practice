extends includes/layout

block variables
  - const title = "Coming soon page with accessible & interactive subscription form";
  - const challenge = "Base Apparel coming soon page";
  - const includeJs = true;

block fonts
  +googleFonts([ 'family=Josefin+Sans:wght@300&display=swap&text=WE%27RE', 'family=Josefin+Sans&display=swap', 'family=Josefin+Sans:wght@600&display=swap&text=COMINGS' ])

block content
  .wrapper
    header.header
      img.logo(src='images/logo.svg' alt='Base Apparel logo')
    .background
    .hero-image
    main.content
      h1.content__heading
        | We're
        br
        span.content__heading--accent coming soon
      p.content__text.
        Hello fellow shoppers! We're currently building our new fashion store
        Add your email below to stay up-to-date with announcements and our
        launch deals.
      form.subscribe(novalidate)
        label.subscribe__label(for='email') Enter email to subscribe
        input#email.subscribe__email(
          type='email'
          name='email'
          placeholder='Email Address'
          aria-describedby='feedback'
          required=''
        )
        .subscribe__error-icon
        button.subscribe__submit(type='submit' aria-label='Submit')
        #feedback.subscribe__feedback(
          aria-live='polite'
          aria-relevant='additions removals'
          aria-atomic='true'
        )
