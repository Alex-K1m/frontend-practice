extends layout
include socialLinks

block variables
  - const title = "Ping coming soon page with accessible subscription form";
  - const challenge = "Ping coming soon page";
  - const includeJs = true;

block fonts
  +googleFonts([ 'family=Libre+Franklin:wght@300&display=swap', 'family=Libre+Franklin:wght@600&display=swap&text=Notify%20Me', 'family=Libre+Franklin:wght@700&display=swap&text=son%21', 'family=Libre+Franklin:ital,wght@1,300&display=swap&text=Pleas%20providm' ])

block content
  .wrapper
    header.header
      .header_logo.logo
    main.content
      h1.content_heading.text.text-h1
        | We are launching #{''}
        span.text-bold soon!
      p.content_paragraph.text Subscribe and get notified
      form.content_form.subscribeForm(novalidate)
        div
          label.emailField.text
            input.emailField_input(
              type='email'
              name='email'
              placeholder='Your email address...'
              aria-describedby='feedback'
            )
            span.srOnly Enter email to subscribe
          p#feedback.subscribeForm_feedback.text.text-secondary(
            aria-live='polite'
            aria-relevant='additions removals'
            aria-atomic='true'
          )
        button.subscribeForm_submit.button(type='submit') Notify Me
    .background
    footer.footer
      +socialLinks('socialLinks', 'socialLinks_item', 'socialLinks_link', 'icon')
      p.footer_copyright.text.text-secondary.
        Â© Copyright Ping. All rights reserved.
