extends ../../../includes/layout

block variables
  - const title = "Animated testimonials slider";
  - const includeJs = "true";

block fonts
  +googleFonts([ 'family=Inter:wght@300&display=swap&text=%E2%80%9C%20I%E2%80%99vebnitrsdcogfawhlukjmp%2C.yx%E2%80%9DT', 'family=Inter:wght@500&display=swap&text=Junior%20Ft-edDvlpUXEg', 'family=Inter:wght@700&display=swap&text=Tany%20SiclrJohkp' ])

block content
  main.content
    .testimonials
      .slide
        img(src='image-tanya.jpg' alt='Member photo - Tanya Sinclair')
        .controls
          button(aria-label='Previous testimonial' data-slide='prev')
          button(aria-label='Next testimonial' data-slide='next')
      blockquote.quote
        p.
          I’ve been interested in coding for a while but never taken the jump,
          until now. I couldn’t recommend this course enough. I’m now in the
          job of my dreams and so excited about the future.
        footer
          cite Tanya Sinclair
          cite UX Engineer
