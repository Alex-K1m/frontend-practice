extends ../../../includes/layout

block variables
  - const title = "Fylo data storage component";

block fonts
  +googleFonts([ 'family=Raleway&display=swap&text=You%E2%80%99ve%20sdfyrtag', 'family=Raleway:wght@700&display=swap&text=815%20GB0LEFT' ])

block content
  main.content
    h1.hidden Fylo data storage widget
    section.control
      h2.hidden Storage control
      img(src='logo.svg' alt='Fylo logo')
      ul.toolbar
        li: button.iconBtn.newFile(aria-label='Create new file')
        li: button.iconBtn.newDir(aria-label='Create new directory')
        li: button.iconBtn.upload(aria-label='Upload')
    section.status
      h2.hidden Storage status
      .bg
      .stats
        label.label(for='meter')
          | Youâ€™ve used #{''}
          span 815 GB #{''}
          | of your storage
        .meter
          meter#meter.hidden(value='815' min='0' max='1000' title='GB')
          .bar
            div
          .limit 0 GB
          .limit 1000 GB
      .badge
        div
          span 185
          | GB Left
