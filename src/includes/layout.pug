block variables

mixin googleFonts(queries)
  each query in queries
    link(rel='stylesheet' href=`https://fonts.googleapis.com/css2?${query}`)

doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title #{title} | #{site.title}
    meta(
      name='description'
      content=`A frontendmentor.io "${challenge}" challenge solution by Alex Kim`
    )
    meta(name='author' content='Alex Kim, https://github.com/Alex-K1m')
    link(
      rel='icon'
      type='image/png'
      sizes='32x32'
      href='../assets/favicon-32x32.png'
    )
    block fonts
    link(rel='stylesheet' href='styles.css' inline)
  body
    block content
    if includeJs
      script(src='script.js')
